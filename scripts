package main

import (
	"fmt"
	"os"
	"os/exec"
	"time"
)

func main() {
	// Run the server in a new terminal
	serverCmd := exec.Command("osascript", "-e", `tell application "Terminal" to do script "cd ~/go/src/github.com/gRPC-CRUD-App; go run server/server.go"`)
	serverCmd.Stdout = os.Stdout
	serverCmd.Stderr = os.Stderr

	err := serverCmd.Start()
	if err != nil {
		fmt.Println("Error starting server:", err)
		return
	}

	// Sleep for 5 seconds
	time.Sleep(5 * time.Second)

	// Run the client-side in this terminal
	clientCmd := exec.Command("go", "run", "cmd/server/main.go")
	clientCmd.Dir = "~/go/src/github.com/gRPC-CRUD-App"
	clientCmd.Stdout = os.Stdout
	clientCmd.Stderr = os.Stderr

	err = clientCmd.Run()
	if err != nil {
		fmt.Println("Error running client:", err)
	}
}
